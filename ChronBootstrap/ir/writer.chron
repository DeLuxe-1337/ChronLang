include core.file.all

GeneratedSource = ""

IR.Writer.WriteLine :: (text) {
    GeneratedSource += text + "\n"
}

IR.Writer.Write :: (text) {
    GeneratedSource += text
}

IR.Writer.WriteToFile :: (path) {
    File.Write(path, GeneratedSource)
}

IR.WriteModule :: {
    IR.Writer.WriteLine("/*\n\tThis file was generated by ChronCompiler (Bootstrapped)\n*/\n\n#include \"Backend/include.h\"\n")
}